    <Style x:Key="WindowToolBarBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="0,1" />
        <Setter Property="BorderBrush" Value="{StaticResource MahApps.Brushes.Accent}" />
        <!--<Setter Property="BorderBrush" Value="#FFE2EDF9" />-->
        <!--<Setter Property="Height" Value="30" />-->
        <Setter Property="BorderThickness" Value="0,0,0,0.5" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFCCE3FF" />
                    <GradientStop Offset="0.98" Color="#FFECF5FF" />
                    <GradientStop Offset="1" Color="White" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ToolBarSplitButtonStyle"
        BasedOn="{StaticResource MahApps.Styles.SplitButton.WindowCommands}"
        TargetType="{x:Type mah:SplitButton}">
        <Setter Property="ButtonStyle">
            <Setter.Value>
                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                    <Setter Property="Width" Value="26" />
                    <Setter Property="BorderThickness" Value="0,0,0.5,0" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style BasedOn="{StaticResource MahApps.Styles.ComboBoxItem}" TargetType="ComboBoxItem">
                    <Setter Property="Padding" Value="5,2" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True" />
                    <Condition Property="IsEnabled" Value="True" />
                </MultiTrigger.Conditions>
                <Setter Property="BorderBrush" Value="{StaticResource MahApps.Brushes.Button.Border}" />
            </MultiTrigger>
        </Style.Triggers>
    </Style>

